extends layout

block customscripts
  script(src="js/libs/modernizr.custom.js")

block content
  p imgPaletteAPI Demo

  .wrapper
    form(action="/api/palette", class="dropzone", id="my-awesome-dropzone")
      .drop-zone-label.dragging-label Drop an image here!
    #info

block nonblocking

  script#color-thief-output-template(type='text/x-mustache').
    <div class="function get-palette">
      <h3 class="function-title">Palette</h3>
      <div class="function-output">
        <div class="swatches">
          {{#palette}}
            <div class="swatch" style="background-color: rgb({{0}}, {{1}}, {{2}})"></div>
          {{/palette}}
        </div>
      </div>
    </div>

  script(src='components/dropzone/downloads/dropzone.min.js')
  script(src='js/libs/jquery-2.0.2.min.js')
  script(src='js/libs/mustache.js')
  script(src="js/demo.js")

